<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listview_item_image"
        android:layout_width="130dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="7dp">

        <TextView
            android:id="@+id/listview_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Audi A7"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listview_item_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="2019"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/listview_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="99 999$"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/serwislogo_item_image"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_gravity="right"/>
    </LinearLayout>
</LinearLayout>